{
  "name": "network-pi",
  "version": "1.1.0",
  "description": "Acker testing platform for pi controlled over the network",
  "main": "index.js",
  "scripts": {
    "save": "git add . && git commit -m \"update\" && git push",
    "start": "npm-run-all --parallel start:server start:webapp",
    "start:webapp": "cd app && npm run start -- --open",
    "start:webapp:pi": "cd app && npm run start:pi -- --open",
    "start:server": "ts-node server/index",
    "start:server:pi": "npm run start:server -- --host raspberrypi.local",
    "start:server:watch": "ts-node-dev server/index",
    "start:server:watch:pi": "npm run start:server:watch -- --host raspberrypi.local",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel start:webapp start:server:watch",
    "watch:pi": "npm-run-all --parallel start:webapp:pi start:server:watch:pi",
    "postinstall": "cd app && npm install"
  },
  "author": "",
  "license": "ISC",
  "manualDependencies": {
    "wiringpi-node": "^2.4.4",
    "node-wiring-pi": "0.0.5"
  },
  "dependencies": {
    "@types/node": "^14.14.37",
    "ack-pi": "github:ackerapple/ack-pi",
    "nconf": "^0.11.2",
    "node-wiring-pi": "0.0.5",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "ts-node-dev": "^1.1.6",
    "typescript": "4.0.5",
    "zone.js": "^0.11.4"
  }
}
